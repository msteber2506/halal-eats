<% layout("layouts/boilerplate") %>
<h1>Edit Restaurant</h1>
<form action="/restaurants/<%=restaurant._id%>?_method=PUT" method="POST">
    <div>
        <label for="title">Title</label>
        <input type="text" id="title" name="restaurant[title]" value="<% restaurant.title %>">
    </div>
    <div>
        <label for="location">Location</label>
        <input type="text" id="location" name="restaurant[location]" value="<% restaurant.location %>">
    </div>
    <button>Update restaurant</button>
</form>
<a href="/restaurants/<%=restaurant._id%>">Back To Restaurants</a>