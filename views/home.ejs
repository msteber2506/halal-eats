<% layout('layouts/boilerplate') %>

<main class="container mt-3">
  <h1>Welcome to Halal Eats</h1>
  <form action="/yelp" method="get" class="row g-3">
    <div class="col-md-6">
      <label for="term" class="form-label">Search Term:</label>
      <input type="text" name="term" id="term" class="form-control" required>
    </div>
    <div class="col-md-6">
      <label for="location" class="form-label">Location:</label>
      <input type="text" name="location" id="location" class="form-control" required>
    </div>
    <div class="col-12">
      <button type="submit" class="btn btn-primary">Search Yelp</button>
    </div>
  </form>
</main>
